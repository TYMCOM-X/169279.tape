.	<<	Build the Index	>>
.MACRO MAKEINDEX	
.PORTION INDEX <<GENERATE INDEX>>
.BEGIN TURN ON "{#\"
.IF LINE NEQ 0 THEN NEXT PAGE ;
.EVERY HEADING(INDEX,,{DATE})
.ONCE CENTER
INDEX
.SEND CONTENTS	
.BEGIN GROUP
.SKIP 2
\\\\\\\ INDEX
\\\\\\\ ====={page}
.END		
.END
.BEGIN AREA TEXT LINES 6 TO 56 CHARS 9 TO 79 IN 2 COLUMNS 4 APART
.PLACE TEXT
.NOJUST  TURN ON "#{"   PREFACE 0; SPREAD_0
.INDENT 0,0
.VARIABLE LETTER,PHR,LASTPG,DFLG,PGNX,PGTST
.LETTER _ PHR _ LASTPG _ DFLG _ NULL
.AT "<" PHRASE ">" PGNO ""	
.PGNX _ "PGNO"
.IF PGNX[1] = "@" THEN START PGTST _ PGNX[2 TO 50] END
.                 ELSE START PGTST _ PGNX END
.IF ^"PHRASE" = PHR THEN START
.	IF PGTST NEQ LASTPG THEN START
.		DFLG
.		DFLG _ NULL
.		}, {PGTST        END
.	ELSE NULL
.       END
.ELSE   START   <<NEW PHRASE, GO TO A NEW LINE>>
.	DFLG
.	DFLG _ NULL
.	BREAK
.	PHR _ ^"PHRASE"
.       IF LETTER NEQ PHR[1] THEN SKIP 2
PHRASE  {PGTST
.       LETTER _ PHR[1];
.       END << END SIGNAL RESPONSE >>
.LASTPG _ PGTST
.IF PGNX[1] = "@" THEN START DFLG _ "@" END
.				
.RECEIVE "<>"
.DFLG
.END
.			



.	<<	Build A Glossary	>>
.MACRO MAKEGLOSSARY	
.PORTION GLOSSARY <<GENERATE GLOSSARY>>
. BEGIN TURN ON "{", "#", ""
. IF LINE NEQ 0 THEN NEXT PAGE ;
. EVERY HEADING(,GLOSSARY,{date})
. SEND CONTENTS 
.BEGIN GROUP
.SKIP 2
\\\\\\\GLOSSARY
\\\\\\\========{page}
.END		
. END
.PLACE TEXT
. BEGIN TURN ON "#\{" SPREAD_1 INDENT 0,0
. TABS 25,30,35,40,45,50,55,60
. AT "<" ID ">" PHRASE "" 
.  START   <<NEW ID, GO TO A NEW LINE>>
.  TOPIC(|ID|)
.   BEGIN GROUP
	ID#--#\PHRASE{
.   END
.  END
.                            
. RECEIVE "<>"
. END
.			



.	<<	Make Table of Contents	>>
.MACRO MAKECONTENT 
.PORTION CONTENTS
.EVERY HEADING( , ,{DATE})
.BEGIN NOFILL FLUSH LEFT  TURN ON "#{\"
.INDENT 0,0
.NEXT PAGE
.EVERY FOOTING( ,{BANNER1},{BANNER})
.TABS 3,6,9,15,21,27,30,33,36,39,42,45,48,51,54,57,60,63,66,69
.GROUP SKIP 5
.ONCE CENTER
TABLE OF CONTENTS
.SKIP 1
SectionPage
.SKIP 1
.RECEIVE
.END
.		   


.	<<	Sectioning Definitions	>>
.MACRO SEC(NAME)	 TURN ON "{\"
.IF LINE NEQ 0 THEN NEXT PAGE;
.EVERY HEADING(NAME,,{DATE})
.NEXT S1
.GROUP SKIP 4
.ONCE CENTER
{S1} -  NAME
.SKIP 1
.SEND CONTENTS	
.SKIP 2
{S1}. \NAME{PAGE}{BREAK;
.LEVL _ 1	
.			

.MACRO SS(NAME)		 TURN ON "{\"
.IF LINES < 15 THEN NEXT PAGE ELSE SKIP 6
.NEXT S2
.ONCE CENTER
{S2!}  NAME
.SKIP 1
.SEND CONTENTS	 IF LEVL > 2 THEN SKIP 1
\{S2!} \NAME{PAGE}{BREAK;
.LEVL _ 2	
.			

.MACRO SSS(NAME)	 TURN ON "{\"
.IF LINES < 12 THEN NEXT PAGE ELSE SKIP 5
.NEXT S3
.ONCE NOFILL FLUSH LEFT TURN ON "#"
############{S3!}  NAME
.SEND CONTENTS	 IF LEVL > 3 THEN SKIP 1
\\{S3!} \NAME{page}{BREAK;
.LEVL _ 3	
.			

.MACRO SSSS(NAME)	 TURN ON "{\"
.IF LINES < 9 THEN NEXT PAGE ELSE SKIP 3
.NEXT S4
.ONCE NOFILL FLUSH LEFT
{S4!}  NAME
.SEND CONTENTS	 IF LEVL > 4 THEN SKIP 1
\\\{S4!} \NAME{PAGE}{BREAK;
.LEVL _ 4	
.			

.MACRO SSSSS(NAME)	 TURN ON "{"
.IF LINES < 6 THEN NEXT PAGE ELSE SKIP 2
.ONCE FLUSH LEFT
NAME
.			


